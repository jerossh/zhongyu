block content
  .page-header
    .container
      h1  #{blog.title}
        small 联系我们，让我们更好的为您服务
  .blog
    .container
      .blog-top.single-top
        .col-md-9.blog-left
          .blog-main
            p.bg #{blog.title}
            p
              | 由 
              a(href='#') Admin
              |  在 #{moment(blog.meta.creatAt).format('YYYY-MM-DD')} 发布
          .blog-main-one
            .blog-one
              .blog-one-left
                img(src=blog.img, alt='')
              p #{blog.article}
            .blog-comments
              ul
                li
                  span.glyphicon.glyphicon-bookmark(aria-hidden='true')
                  a(href='#') #{blog.category.name}
                li
                  span.glyphicon.glyphicon-calendar(aria-hidden='true')
                  p #{moment(blog.meta.creatAt).format('YYYY-MM-DD')}
                li
                  span.glyphicon.glyphicon-user(aria-hidden='true')
                  a(href='#') Admin
              .clearfix
          
